{
  "debug": false,
  "environment": "production",
  "styles": {
    "path": "path/to/css/folder"
  },
  "markup": {
    "path": "path/to/markup/folder",
    "type": "html"
  },
  "borderWeights": [
    {
      "name": "small",
      "weight": "1px"
    },
    {
      "name": "medium",
      "weight": ".5rem"
    },
    {
      "name": "large",
      "weight": "1rem"
    }
  ],
  "colors": [
    {
      "name": "black",
      "color": "rgba(20, 20, 30, 1)",
      "opacity": false
    },
    {
      "name": "white",
      "color": "rgba(255, 255, 255, 1)",
      "opacity": false
    },
    {
      "name": "theme-1",
      "color": "purple",
      "opacity": true
    },
    {
      "name": "theme-2",
      "color": "yellow",
      "opacity": false
    },
    {
      "name": "theme-3",
      "color": "#FF0000",
      "opacity": false
    }
  ],
  "containers": [
    {
      "name": "small",
      "maxWidth": "39rem"
    },
    {
      "name": "medium",
      "maxWidth": "60rem"
    },
    {
      "name": "large",
      "maxWidth": "80rem"
    }
  ],
  "flexgrid": {
    "enabled": false,
    "columns": 12
  },
  "fonts": [
    {
      "name": "sans",
      "loadType": "system",
      "value": "sans-serif",
      "url": null
    },
    {
      "name": "serif",
      "loadType": "system",
      "value": "serif",
      "url": null
    },{
      "name": "script",
      "loadType": "system",
      "value": "script",
      "url": null
    },
    {
      "name": "mono",
      "loadType": "system",
      "value": "monospace",
      "url": ""
    }
  ],
  "fontBaseSize": "112.5%",
  "fontScale": "1.25",
  "gradients": [
    {
      "type": "radial",
      "colorStops": [
        {
          "name": "green",
          "color": "green"
        },
        {
          "name": "red",
          "color": "red"
        },
        {
          "name": "blue",
          "color": "blue"
        }
      ]
    },
    {
      "type": "linear",
      "angle": "135deg",
      "colorStops": [
        {
          "name": "green",
          "color": "green"
        },
        {
          "name": "red",
          "color": "red"
        },
        {
          "name": "blue",
          "color": "blue"
        }
      ]
    }
  ],
  "media": [
    {
      "name": "small",
      "value": "48em"
    },
    {
      "name": "medium",
      "value": "64em"
    },
    {
      "name": "large",
      "value": "100em"
    }
  ],
  "radius": [
    {
      "name": "small",
      "value": "10px"
    },
    {
      "name": "medium",
      "value": "50rem"
    },{
      "name": "large",
      "value": "100%"
    }
  ],
  "shadows": [
    {
      "name": "small",
      "value": "0 .15rem .4rem rgba(0, 0, 0, .3)"
    },
    {
      "name": "medium",
      "value": "0 .35rem .6rem rgba(0, 0, 0, .3)"
    },
    {
      "name": "large",
      "value": "0 .6rem .8rem rgba(0, 0, 0, .3)"
    }
  ],
  "whitespaceScale": "1.5"
}