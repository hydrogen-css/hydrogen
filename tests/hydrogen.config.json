{
  "info": {
    "docs": "https://beta.hydrogen.design",
    "settings": "https://beta.hydrogen.design/settings",
    "code": "https://github.com/hydrogen-design-system/hydrogen",
    "roadmap": "https://github.com/orgs/hydrogen-design-system/projects/1"
  },
  "debug": true,
  "input": [
    "markup/"
  ],
  "output": "styles",
  "variables": true,
  "reset_styles": true,
  "dark_mode": "toggle",
  "colors": [
    {
      "key": "primary",
      "color": "#9D5CFF",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "secondary",
      "color": "#5CFFEE",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "accent",
      "color": "#FF5C6D",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "black",
      "color": "rgba(20, 20, 30, 1)",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "white",
      "color": "rgba(255, 255, 255, 1)",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    }
  ],
  "media": [
    {
      "key": "base",
      "query": null
    },
    {
      "key": "print",
      "query": "print"
    },
    {
      "key": "p-tablet",
      "query": "screen and (min-width: 48em)"
    },
    {
      "key": "l-tablet",
      "query": "screen and (min-width: 73em)"
    },
    {
      "key": "laptop",
      "query": "screen and (min-width: 80em)"
    },
    {
      "key": "desktop",
      "query": "screen and (min-width: 100em)"
    }
  ],
  "typography": [
    {
      "query_key": "base",
      "size": "100%",
      "line_height": "1.4",
      "type_scale": "1.2"
    },
    {
      "query_key": "l-tablet",
      "size": "112.5%",
      "line_height": "2",
      "type_scale": "1.3"
    },
    {
      "query_key": "desktop",
      "size": "125%",
      "line_height": "1.1",
      "type_scale": "1.235"
    }
  ],
  "containers": [
    {
      "key": "small",
      "max_width": "39rem"
    },
    {
      "key": "medium",
      "max_width": "60rem"
    },
    {
      "key": "large",
      "max_width": "80rem"
    }
  ],
  "fonts": [
    {
      "key": "sans",
      "family": "sans-serif"
    },
    {
      "key": "serif",
      "family": "serif"
    },
    {
      "key": "script",
      "family": "script"
    },
    {
      "key": "mono",
      "family": "monospace"
    }
  ],
  "gradients": [
    {
      "key": "myLinearGradient",
      "gradient": "linear-gradient(135deg, green, pink, rgba(255, 255, 255, 1))",
      "fallback": "green"
    },
    {
      "key": "myRadialGradient",
      "gradient": "radial-gradient(circle at center, blue, purple, rgba(255, 255, 255, 1))",
      "fallback": "green"
    }
  ],
  "radius": [
    {
      "key": "rounded",
      "radius": "10px"
    }
  ],
  "shadows": [
    {
      "key": "s",
      "shadow": "0 0.1rem 0.2rem 0 rgba(0, 0, 0, .2)"
    },
    {
      "key": "m",
      "shadow": "0 0.25rem 0.5rem -0.05rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "l",
      "shadow": "0 0.4rem 0.7rem -0.1rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "xl",
      "shadow": "0 0.55rem 1rem -0.2rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "xxl",
      "shadow": "0 0.7rem 1.5rem -0.3rem rgba(0, 0, 0, .2)"
    }
  ],
  "transitions": {
    "durations": [
      {
        "key": "default",
        "duration": ".2s"
      }
    ],
    "functions": [
      {
        "key": "ease",
        "function": "ease"
      }
    ],
    "delays": [
      {
        "key": "none",
        "delay": "0s"
      }
    ]
  }
}