  "description": "A CSS utility framework that leverages data-attributes to provide clarity and flexibility. MIT Licensed.",
  "keywords": [
    "Hydrogen",
    "design",
    "system",
    "component",
    "library",
    "css",
    "framework"
  ],
  "main": "./bin/index.js",
  "bin": {
    "hydrogen-init": "./bin/init.js",
    "hydrogen-watch": "./bin/watch.js",
    "hydrogen-build": "./bin/build.js",
    "h2-init": "./bin/init.js",
    "h2-watch": "./bin/watch.js",
    "h2-build": "./bin/build.js"
  },
  "scripts": {
    "h2-test": "node ./lib/scripts/test.js",
    "start": "npm-run-all --parallel h2-watch-dev browsersync",
    "h2-init-dev": "node ./dev/init.js",
    "h2-build-dev": "node ./dev/build.js",
    "h2-watch-dev": "node ./dev/watch.js",
    "browsersync": "browser-sync start --server './lib/stage/' --startPath 'markup/index.html' --files 'lib/stage' --port 8080 --no-notify --no-inject-changes"
