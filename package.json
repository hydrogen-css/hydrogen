    "test-parsing-clean": "tests/test-parsing/env/build-clean.sh",
    "test-init-fresh": "tests/test-initialization/env/fresh.sh",
    "test-init-blocked": "tests/test-initialization/env/blocked.sh",
    "test-errors": "tests/test-errors/env/build.sh",
    "test-commands-build": "tests/test-commands/env/build.sh",
    "test-commands-build-dev": "tests/test-commands/env/build-dev.sh",
    "test-commands-build-prod": "tests/test-commands/env/build-prod.sh",
    "test-commands-build-logs": "tests/test-commands/env/build-logs.sh",
    "test-commands-build-clean": "tests/test-commands/env/build-clean.sh",
    "test-commands-watch": "tests/test-commands/env/watch.sh",
    "test-commands-watch-dev": "tests/test-commands/env/watch-dev.sh",
    "test-commands-watch-prod": "tests/test-commands/env/watch-prod.sh",
    "test-commands-watch-logs": "tests/test-commands/env/watch-logs.sh",
    "test-commands-watch-clean": "tests/test-commands/env/watch-clean.sh",
    "test-settings-minimum": "tests/test-settings/env/run-1-minimum-configuration.sh",
    "test-settings-complete": "tests/test-settings/env/run-2-complete-configuration.sh"
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "browserlist": "^1.0.1",
    "chokidar": "^3.5.3",
    "color": "^4.2.3",
    "colors": "^1.4.0",
    "cssnano": "^5.1.13",
    "csstree-validator": "^3.0.0",
    "glob": "^8.0.3",
    "lodash.clonedeep": "^4.5.0",
    "postcss": "^8.4.16",
    "prompt": "^1.3.0",
    "yargs": "^17.5.1"
  },
  "engines": {
    "node": ">=14.18.1",
    "npm": ">=8.11.0"
  },
  "browserslist": [
    "last 1 version and not dead"
  ],
  "prettier": {
    "singleQuote": true,
    "proseWrap": "preserve",
    "bracketSpacing": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleAttributePerLine": true
  }
}