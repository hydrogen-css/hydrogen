    "url": "https://github.com/hydrogen-design-system/hydrogen/issues"
  },
  "homepage": "https://hydrogen.design",
  "dependencies": {
    "autoprefixer": "^10.4.5",
    "browserlist": "^1.0.1",
    "color": "^4.2.3",
    "colors": "^1.4.0",
    "cssnano": "^5.1.7",
    "cssnano-preset-lite": "^2.1.2",
    "del": "^6.0.0",
    "glob": "^8.0.1",
    "postcss": "^8.4.12",
    "prompt": "^1.3.0"
  },
  "browserslist": [
    "last 1 version and not dead"
  ],
  "engines": {
    "npm": ">=6.14.4",
    "node": ">=12.16.2"
  },
