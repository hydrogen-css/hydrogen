    "test-function-parse-basic-property": "node -e 'require(\"./lib/scripts/properties/parse-basic-property.test\").runTest()'",
    "test-function-load-configuration": "node -e 'require(\"./lib/scripts/settings/load-configuration.test\").runTest()'",
