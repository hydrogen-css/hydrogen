{
  "name": "@hydrogen-css/hydrogen",
  "version": "2.0.0-beta.34",
  "description": "An open-source, inline CSS framework powered by data-attributes. MIT Licensed.",
  "keywords": [
    "Hydrogen",
    "css",
    "inline",
    "utility",
    "framework"
  ],
  "homepage": "https://hydrogen.design",
  "bugs": {
    "url": "https://gitlab.com/hydrogen-css/hydrogen/-/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Josh Beveridge",
    "url": "https://joshbeveridge.ca"
  },
  "main": "./hydrogen.js",
  "bin": {
    "hydrogen-init": "./bin/init.js",
    "hydrogen-watch": "./bin/watch.js",
    "hydrogen-build": "./bin/build.js",
    "hydrogen-clean": "./bin/clean.js",
    "h2-init": "./bin/init.js",
    "h2-watch": "./bin/watch.js",
    "h2-build": "./bin/build.js",
    "h2-clean": "./bin/clean.js"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/hydrogen-css/hydrogen"
  },
  "scripts": {
    "setup": "lib/setup/setup.sh",
    "docs": "cd docs && npm start",
    "tests": "node -e 'require(\"./lib/scripts/run-all.test\").runTest()'",
    "test-basics": "cd tests/test-basics && node -e 'require(\"./run.test\").run_test()'",
    "refresh-docs": "lib/setup/docs-refresh.sh",
    "refresh-tests": "lib/setup/tests-refresh.sh",
    "test-fn-calculate-line-height": "node -e 'require(\"./lib/scripts/helpers/calculate-line-height.test\").runTest()'",
    "test-fn-delete-logs": "node -e 'require(\"./lib/scripts/helpers/delete-logs.test\").runTest()'",
    "test-fn-generate-date-time": "node -e 'require(\"./lib/scripts/helpers/generate-date-time.test\").runTest()'",
    "test-fn-manipulate-color": "node -e 'require(\"./lib/scripts/helpers/manipulate-color.test\").runTest()'",
    "test-fn-parse-input": "node -e 'require(\"./lib/scripts/helpers/parse-input.test\").runTest()'",
    "test-fn-parse-output": "node -e 'require(\"./lib/scripts/helpers/parse-output.test\").runTest()'",
    "test-helpers": "node -e 'require(\"./lib/scripts/helpers/run-all.test\").runTest()'",
    "test-fn-build-attribute-css": "node -e 'require(\"./lib/scripts/attributes/build-attribute-css.test\").runTest()'",
    "test-fn-build-attribute-selectors": "node -e 'require(\"./lib/scripts/attributes/build-attribute-selectors.test\").runTest()'",
    "test-fn-attribute-property": "node -e 'require(\"./lib/scripts/attributes/attribute-property.test\").runTest()'",
    "test-fn-parse-attributes": "node -e 'require(\"./lib/scripts/attributes/parse-attributes.test\").runTest()'",
    "test-fn-parse-options": "node -e 'require(\"./lib/scripts/attributes/parse-options.test\").runTest()'",
    "test-fn-parse-prefix": "node -e 'require(\"./lib/scripts/attributes/parse-prefix.test\").runTest()'",
    "test-fn-parse-queries": "node -e 'require(\"./lib/scripts/attributes/parse-queries.test\").runTest()'",
    "test-fn-parse-query": "node -e 'require(\"./lib/scripts/attributes/parse-query.test\").runTest()'",
    "test-fn-validate-attribute-css": "node -e 'require(\"./lib/scripts/attributes/validate-attribute-css.test\").runTest()'"
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "browserlist": "^1.0.1",
    "chokidar": "^3.5.3",
    "color": "^4.2.3",
    "colors": "^1.4.0",
    "cssnano": "^5.1.13",
    "csstree-validator": "^3.0.0",
    "glob": "^8.0.3",
    "lodash.clonedeep": "^4.5.0",
    "postcss": "^8.4.16",
    "prompt": "^1.3.0",
    "yargs": "^17.5.1"
  },
  "engines": {
    "node": ">=14.18.1",
    "npm": ">=8.11.0"
  },
  "browserslist": [
    "last 1 version and not dead"
  ],
  "prettier": {
    "singleQuote": true,
    "proseWrap": "preserve",
    "bracketSpacing": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleAttributePerLine": true
  }
}