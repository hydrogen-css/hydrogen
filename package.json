{
  "name": "@hydrogen-design-system/hydrogen.css",
  "version": "2.0.0",
  "description": "A CSS utility framework that leverages data-attributes to provide clarity and flexibility. MIT Licensed.",
  "keywords": [
    "Hydrogen",
    "design",
    "system",
    "component",
    "library",
    "css",
    "framework"
  ],
  "main": "./bin/index.js",
  "bin": {
    "hydrogen-init": "./bin/init.js",
    "hydrogen-watch": "./bin/watch.js",
    "hydrogen-build": "./bin/build.js",
    "h2-init": "./bin/init.js",
    "h2-watch": "./bin/watch.js",
    "h2-build": "./bin/build.js"
  },
  "scripts": {
    "h2-test": "node ./lib/build.js",
    "start": "npm-run-all --parallel h2-dev-watch browsersync",
    "h2-dev-init": "node ./lib/init.js dev",
    "h2-dev-build": "node ./lib/build.js dev",
    "h2-dev-watch": "node ./lib/watch.js dev",
    "browsersync": "browser-sync start --server=\"tests\" --port=\"8080\" --files=\"tests/**/*\" --startPath=\"markup/index.html\" --no-notify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hydrogen-design-system/hydrogen.git"
  },
  "author": "Josh Beveridge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hydrogen-design-system/hydrogen/issues"
  },
  "homepage": "https://hydrogen.design",
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "browserlist": "^1.0.1",
    "color": "^4.2.3",
    "colors": "^1.4.0",
    "cssnano": "^5.1.8",
    "cssnano-preset-lite": "^2.1.2",
    "del": "^6.1.0",
    "glob": "^8.0.3",
    "node-watch": "^0.7.3",
    "postcss": "^8.4.14",
    "prompt": "^1.3.0"
  },
  "browserslist": [
    "last 1 version and not dead"
  ],
  "engines": {
    "npm": ">=6.14.4",
    "node": ">=12.16.2"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 1000,
    "proseWrap": "preserve"
  },
  "devDependencies": {
    "browser-sync": "^1.9.2",
    "npm-run-all": "^4.1.5"
  }
}
