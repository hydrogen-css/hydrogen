    "docs": "cd docs && npm start",
    "tests": "node -e 'require(\"./lib/scripts/helpers/run-all.test\").test()'",
    "test-function-calculate-line-height": "node -e 'require(\"./lib/scripts/helpers/calculate-line-height.test\").runTest()'",
    "test-function-delete-logs": "node -e 'require(\"./lib/scripts/helpers/delete-logs.test\").runTest()'",
