{
  "info": {
    "docs": "https://beta.hydrogen.design",
    "settings": "https://beta.hydrogen.design/settings",
    "code": "https://github.com/hydrogen-design-system/hydrogen",
    "roadmap": "https://github.com/orgs/hydrogen-design-system/projects/1"
  },
  "input": [
    "array/of/input/folders"
  ],
  "output": "path/to/output/folder",
  "variables": {
    "css": false,
    "sass": false
  },
  "resetStyles": false,
  "colors": [
    {
      "key": "primary",
      "color": "#9D5CFF",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "magenta",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "secondary",
      "color": "#5CFFEE",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "accent",
      "color": "#FF5C6D",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "black",
      "color": "rgba(20, 20, 30, 1)",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "white",
      "color": "rgba(255, 255, 255, 1)",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    }
  ],
  "containers": [
    {
      "key": "small",
      "maxWidth": "39rem"
    },
    {
      "key": "medium",
      "maxWidth": "60rem"
    },
    {
      "key": "large",
      "maxWidth": "80rem"
    }
  ],
  "fonts": [
    {
      "key": "sans",
      "family": "sans-serif"
    },
    {
      "key": "serif",
      "family": "serif"
    },
    {
      "key": "script",
      "family": "script"
    },
    {
      "key": "mono",
      "family": "monospace"
    }
  ],
  "gradients": [
    {
      "key": "myLinearGradient",
      "gradient": "linear-gradient(135deg, green, pink, rgba(255, 255, 255, 1))",
      "fallback": "green"
    },
    {
      "key": "myRadialGradient",
      "gradient": "radial-gradient(circle at left, green, pink, rgba(255, 255, 255, 1))",
      "fallback": "green"
    }
  ],
  "media": [
    {
      "key": "b",
      "query": null
    },
    {
      "key": "p",
      "query": "print"
    },
    {
      "key": "s",
      "query": "screen and (min-width: 48em)"
    },
    {
      "key": "m",
      "query": "screen and (min-width: 55em)"
    },
    {
      "key": "l",
      "query": "screen and (min-width: 64em)"
    },
    {
      "key": "xl",
      "query": "screen and (min-width: 100em)"
    }
  ],
  "radius": [
    {
      "key": "rounded",
      "radius": "10px"
    }
  ],
  "shadows": [
    {
      "key": "s",
      "shadow": "0 0.1rem 0.2rem 0 rgba(0, 0, 0, .2)"
    },
    {
      "key": "m",
      "shadow": "0 0.25rem 0.5rem -0.05rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "l",
      "shadow": "0 0.4rem 0.7rem -0.1rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "xl",
      "shadow": "0 0.55rem 1rem -0.2rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "xxl",
      "shadow": "0 0.7rem 1.5rem -0.3rem rgba(0, 0, 0, .2)"
    }
  ],
  "transitions": {
    "durations": [
      {
        "key": "default",
        "duration": ".2s"
      }
    ],
    "functions": [
      {
        "key": "ease",
        "function": "ease"
      }
    ],
    "delays": [
      {
        "key": "none",
        "delay": "0s"
      }
    ]
  },
  "typography": [
    {
      "size": "100%",
      "lineHeight": "1.3",
      "queryKey": "b",
      "typeScale": "1.25"
    },
    {
      "size": "112.5%",
      "lineHeight": "1.2",
      "queryKey": "l",
      "typeScale": "1.33"
    },
    {
      "size": "118%",
      "lineHeight": "1.4",
      "queryKey": "xl",
      "typeScale": "1.25"
    }
  ]
}