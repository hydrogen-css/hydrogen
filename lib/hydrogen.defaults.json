{
  "input": [
    "array/of/input/folders"
  ],
  "output": "path/to/output/folder",
  "variables": {
    "css": false,
    "sass": false
  },
  "colors": [
    {
      "key": "primary",
      "color": "#9D5CFF",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "magenta",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "secondary",
      "color": "#5CFFEE",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "accent",
      "color": "#FF5C6D",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "black",
      "color": "rgba(20, 20, 30, 1)",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    },
    {
      "key": "white",
      "color": "rgba(255, 255, 255, 1)",
      "scale": {
        "light": "auto",
        "lighter": "auto",
        "lightest": "auto",
        "dark": "auto",
        "darker": "auto",
        "darkest": "auto"
      }
    }
  ],
  "containers": [
    {
      "key": "s",
      "maxWidth": "39rem"
    },
    {
      "key": "m",
      "maxWidth": "60rem"
    },
    {
      "key": "l",
      "maxWidth": "80rem"
    }
  ],
  "fonts": [
    {
      "key": "sans",
      "family": "sans-serif"
    },
    {
      "key": "serif",
      "family": "serif"
    },
    {
      "key": "script",
      "family": "script"
    },
    {
      "key": "mono",
      "family": "monospace"
    }
  ],
  "baseFontSizes": [
    {
      "size": "100%",
      "query": "screen"
    },
    {
      "size": "112.5%",
      "query": "screen and (min-width: 64em)"
    },{
      "size": "118%",
      "query": "screen and (min-width: 100em)"
    }
  ],
  "baseLineHeight": "1.3",
  "typeScale": "1.25",
  "gradients": [
    {
      "key": "myLinearGradient",
      "type": "linear",
      "angle": "135deg",
      "colorStops": [
        "green",
        "pink",
        "rgba(255, 255, 255, 1)"
      ]
    },
    {
      "key": "myRadialGradient",
      "type": "radial",
      "colorStops": [
        "green",
        "pink",
        "rgba(255, 255, 255, 1)"
      ]
    }
  ],
  "media": [
    {
      "key": "b",
      "query": null
    },
    {
      "key": "p",
      "query": "print"
    },
    {
      "key": "s",
      "query": "screen and (min-width: 48em)"
    },
    {
      "key": "m",
      "query": "screen and (min-width: 55em)"
    },
    {
      "key": "l",
      "query": "screen and (min-width: 64em)"
    },
    {
      "key": "xl",
      "query": "screen and (min-width: 100em)"
    }
  ],
  "radius": [
    {
      "key": "rounded",
      "radius": "10px"
    }
  ],
  "shadows": [
    {
      "key": "s",
      "value": "0 0.1rem 0.2rem 0 rgba(0, 0, 0, .2)"
    },
    {
      "key": "m",
      "value": "0 0.25rem 0.5rem -0.05rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "l",
      "value": "0 0.4rem 0.7rem -0.1rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "xl",
      "value": "0 0.55rem 1rem -0.2rem rgba(0, 0, 0, .2)"
    },
    {
      "key": "xxl",
      "value": "0 0.7rem 1.5rem -0.3rem rgba(0, 0, 0, .2)"
    }
  ]
}